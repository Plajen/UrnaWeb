@using UrnaEletronica.Application.ViewModels;
@model CandidateViewModel

@using (Html.BeginForm("New", "Candidate", FormMethod.Post, new { id = "form-candidate", @class = "modal-content" }))
{
    <div class="modal-header p-2" style="padding-left: 20px !important">
        <div class="mt-3">
            <h5 class="modal-title font-strong">NOVO CANDIDATO</h5>
        </div>
        <button class="close" type="button" aria-label="Close" id="close-new-candidate-modal">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body p-5" style="padding-bottom: 10px !important; padding-top: 20px !important">
        <div class="d-flex mb-4 justify-content-center">
            <div id="profile-img-container">
                <i class="fa fa-user fa-5x"></i>
            </div>
        </div>
        <div class="form-group mb-4">
            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @type = "text", @name = "fullname", @placeholder = "Insira o Nome do Candidato", @Id = "FullName", maxlength = "50" })
            @Html.ValidationMessageFor(x => x.FullName)
        </div>
        <div class="form-group mb-4">
            @Html.TextBoxFor(x => x.ViceName, new { @class = "form-control", @type = "text", @name = "vicename", @placeholder = "Insira o Nome do Vice", @Id = "ViceName", maxlength = "50" })
            @Html.ValidationMessageFor(x => x.ViceName)
        </div>
        <div class="form-group mb-4">
            @Html.TextBoxFor(x => x.Ticket, new { @class = "form-control", @type = "text", @name = "ticket", @placeholder = "Insira a Legenda do Candidato", @Id = "Ticket", maxlength = "2" })
            @Html.ValidationMessageFor(x => x.Ticket)
        </div>
    </div>
    <div class="modal-footer justify-content-between bg-primary-50">
        <div>
            <button class="btn btn-primary mr-3" id="submit-button" type="submit">Enviar</button>
        </div>
    </div>
}